{
  "name": "also-asked-api-specification",
  "private": true,
  "dependencies": {
    "@stoplight/spectral-cli": "^6.6.0",
    "openapi-format": "^1.13.1"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "widdershins": "^4.0.1"
  },
  "scripts": {
    "postinstall": "husky install",
    "lint": "npm run lint:yaml && npm run lint:openapi && npm run lint:prose",
    "lint:yaml": "yamllint openapi/",
    "lint:openapi": "spectral lint openapi/**/*.{json,yml,yaml}",
    "lint:prose": "./lint-prose.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint",
      "pre-push": "lint"
    }
  }
}
